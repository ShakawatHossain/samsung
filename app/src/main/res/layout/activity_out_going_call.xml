<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.gnt.samsung.app.OutGoingCallActivity">

    <TableLayout
            android:id="@+id/tableLout_relativeLout_outGoingCall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/text_size">
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Phone Number :"
                    android:textSize="@dimen/text_size"
                    />
            <EditText
                    android:id="@+id/edt_phn_num"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:ems="6"/>
        </TableRow>
        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/text_size">
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Call Duration :"
                    android:textSize="@dimen/text_size"
                    />
            <EditText
                    android:id="@+id/edt_call_duration"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:maxLength="2"
                    android:inputType="numberDecimal"
                    android:ems="1"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="mm"
                    android:textSize="@dimen/text_size"
                    />
        </TableRow>
        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/text_size">
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Call Interval :"
                    android:textSize="@dimen/text_size"
                    />
            <EditText
                    android:id="@+id/edt_call_interval"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:maxLength="2"
                    android:inputType="numberDecimal"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="mm"
                    android:textSize="@dimen/text_size"
                    />
        </TableRow>
        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/text_size">
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Total Number of Call :"
                    android:textSize="@dimen/text_size"
                    />
            <EditText
                    android:id="@+id/edt_num_call"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:maxLength="2"
                    android:inputType="numberDecimal"/>
        </TableRow>
    </TableLayout>

    <Button
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size"
            android:padding="@dimen/text_size"
            android:layout_below="@+id/tableLout_relativeLout_outGoingCall"
            android:layout_centerHorizontal="true"
            android:background="@color/green_btn"
            android:text="Start Call"
            android:textColor="@color/white_text"
            android:textSize="@dimen/text_size"
            />

</RelativeLayout>
